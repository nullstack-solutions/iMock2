{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "jsyaml": "readonly"
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-console": "off",
    "no-var": "warn",
    "prefer-const": "warn",
    "no-duplicate-imports": "warn"
  }
}
